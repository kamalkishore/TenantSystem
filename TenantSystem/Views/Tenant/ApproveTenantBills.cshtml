
@{
    ViewBag.Title = "Approve Bills";
}

<br />
<div class="container-fluid">

    <div class="page-header">
        <h3>Please Approve Bills</h3>
    </div>

    <div id="loading">
        <img src="~/Content/images/loading.gif" /><br>
        Loading..
    </div>

    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div id="ContainerTenantBill"></div>

        <p class="button-margin">
            <input type="submit" class="btn btn-lg btn-primary" value="Approve Bill" />
        </p>
    }

    <script id="TemplateTenantBill" type="text/x-handlebars-template">
        <div>
            {{#each tenantPendingBills}}
            <table class="tenant-bill-template">
                <tr>
                    <td colspan="3">
                        {{TenantName}}
                    </td>
                </tr>
                <tr class="border-tr">
                    <td colspan="3">
                        Electricity Bill for Month of {{MonthName}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Current Month Reading  {{formatdate CurrentMonthReadingDate}}
                    </td>
                    <td class="arrow"></td>
                    <td>
                        {{CurrentMonthReading}}
                    </td>
                </tr>

                <tr>
                    <td>
                        Previous Month Reading {{formatdate PreviousMonthReadingDate}}
                    </td>
                    <td class="arrow"></td>
                    <td>
                        {{PreviousMonthReading}}
                    </td>
                </tr>

                <tr class="border-tr">
                    <td>
                        Amount Payable for the Month (Rs {{PerUnitPrice}} Per Unit)
                    </td>
                    <td class="arrow"></td>
                    <td>
                        {{CurrentMonthPayableAmount}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Previous Month Pending Amount
                    </td>
                    <td class="arrow"></td>
                    <td>
                        {{PreviousMonthPendingAmount}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Last Amount Paid in {{formatdate LastPaidAmountDate}}
                    </td>
                    <td class="arrow"></td>
                    <td>
                        {{LastPaidAmount}}
                    </td>
                </tr>
                <tr class="border-tr">
                    <td>
                        Total Amount Payable
                    </td>
                    <td class="arrow"></td>
                    <td>
                        {{TotalPayableAmount}}
                    </td>
                </tr>
            </table>
            {{/each}}
        </div>
    </script>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/handlebars")
    @Scripts.Render("~/bundles/moment")

    <script type="text/javascript">
        $(function () {

            Handlebars.registerHelper("formatdate", function (pDate) {
                var date = new Date(parseInt(pDate.substr(6)));
                var minDate = new Date("Jan 01 1900");
                if (date > minDate) {
                    return "(" + moment(date).format("DD-MMMM-YYYY") + ")";
                }
                else {
                    return "";
                }
            });

            function fnSuccess(data) {
                console.log("success");
                var template = $("#TemplateTenantBill").html();
                //compile the template
                var rendered = Handlebars.compile(template);
                //rendered result
                var result = rendered(data);
                $("#ContainerTenantBill").html(result);
            }

            function fnGetBillDetails() {
                try {

                    var optionGetBillDetailsOfSelectedMonth = {
                        url: "GetPendingTenantBills",
                        datatype: "json",
                        type: "GET",
                        success: fnSuccess,
                        error: function (xhr, event) {
                            console.log("error");
                        }
                    };

                    $.ajax(optionGetBillDetailsOfSelectedMonth);

                }
                catch (err) {
                    alert(err);
                }
            }

            fnGetBillDetails();

            $("#btnShowBillDetails").submit(function () {
                var selectedMonth = $("#txtMonth").val();
                $("#hdnSelectedMonth").val(selectedMonth);
                alert(selectedMonth);
            });

            $(document).ajaxStart(function () {
                $("#loading").css("display", "block");
            });
            $(document).ajaxComplete(function () {
                $("#loading").css("display", "none");
            });

        });
    </script>
}