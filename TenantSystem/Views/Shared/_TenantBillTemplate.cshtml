@model TenantSystem.Models.TenantBill

<table class="tenant-bill-template">
    <tr>        
        <td colspan="3">
            @Html.DisplayFor(model=>model.TenantName)
        </td>        
    </tr>
    <tr class="border-tr">
        <td colspan="3">
            Electricity Bill for Month of
        </td>

    </tr>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.CurrentMonthReading) (@Html.DisplayFor(model => model.CurrentMonthReadingDate))
        </td>
        <td class="arrow"></td>
        <td>
            @Html.DisplayFor(model => model.CurrentMonthReading)
        </td>
    </tr>
    
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.PreviousMonthReading)
        </td>
