        <td>
            @Html.DisplayFor(model => model.CurrentMonthPayableAmount)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.PreviousMonthPendingAmount)
        </td>
        <td class="arrow"></td>
        <td>
            @Html.DisplayFor(model => model.PreviousMonthPendingAmount)
        </td>
    </tr>
        <tr>
        <td>
            @Html.DisplayNameFor(model => model.LastPaidAmount) in @Html.DisplayFor(model => model.LastPaidAmountDate)
        </td>
        <td class="arrow"></td>
        <td>
            @Html.DisplayFor(model => model.LastPaidAmount)
        </td>
    </tr>
    <tr class="border-tr">
        <td>
            @Html.DisplayNameFor(model => model.TotalPayableAmount)
        </td>
        <td class="arrow"></td>
        <td>
            @Html.DisplayFor(model => model.TotalPayableAmount)
