@model TenantSystem.Models.Building

@{
    ViewBag.Title = "Add Building Details";
}

<h2>Add Building</h2>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Add Building Details</legend>

        <div class="editor-label">
            @Html.LabelFor(model=>model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model=>model.Name)
            @Html.ValidationMessageFor(model=> model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model=>model.NumberOfFloors)            
        </div>
        <div>
            @Html.EditorFor(model=>model.NumberOfFloors)
            @Html.ValidationMessageFor(model=>model.NumberOfFloors)
        </div>
    </fieldset>
    <p>
        <input type="submit" value="Create" />
    </p>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}